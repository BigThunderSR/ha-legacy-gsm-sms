{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "pipenv",
    "poetry",
    "github-actions"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "python"
      ],
      "enabled": true
    },
    {
      "matchManagers": ["github-actions"],
      "enabled": true
    }
  ]
}
